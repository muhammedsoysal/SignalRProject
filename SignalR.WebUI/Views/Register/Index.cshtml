@model RegisterDto
@{
    Layout = null;
}
<!doctype html>
<html lang="en">
<head>
    <title>SignalR Restoran Kayıt</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/login-form-19/css/style.css">

</head>
<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">Kayıt Ol</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap py-5">
                        <div class="img d-flex align-items-center justify-content-center" style="background-image: url(/login-form-19/images/bg.jpg);"></div>
                        <h3 class="text-center mb-0">Hoş Geldiniz</h3>
                        <p class="text-center">Lütfen bilgilerinizi kutucuklara giriniz...</p>
                        @using (Html.BeginForm("Index", "Register", FormMethod.Post))
                        {
                            <div class="form-group">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-user"></span></div>
                                <input type="text" class="form-control"  asp-for="Name" placeholder="İsim" required>
                            </div>
                            <div class="form-group">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-lock"></span></div>
                                <input type="text" class="form-control" asp-for="Surname" placeholder="Soyisim">
                            </div>
                            <div class="form-group">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-lock"></span></div>
                                <input type="text" class="form-control" asp-for="UserName" placeholder="Kullanıcı Adı">
                            </div>
                            <div class="form-group">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-lock"></span></div>
                                <input type="email" class="form-control" asp-for="Email" placeholder="Email">
                            </div>
                            <div class="form-group">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-lock"></span></div>
                                <input type="password" class="form-control" asp-for="Password" placeholder="*****" required>
                            </div>
                          
                            if (ViewBag.ErrorMessage != null)
                            {
                                <div class="text-center" style="margin-bottom:15px">
                                    <a class="text-danger">
                                        @ViewBag.ErrorMessage
                                    </a>
                                </div>
                            }
                            <div class="form-group">
                                <button type="submit" class="btn form-control btn-primary rounded submit px-3">Giriş Yap</button>
                            </div>
                            
                            <div class="w-100 text-center mt-4">
                                <a href="/Login/Index">Zaten bir hesabın var mı? Giriş yap</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/login-form-19/jquery.min.js"></script>
    <script src="~/login-form-19js/popper.js"></script>
    <script src="~/login-form-19js/bootstrap.min.js"></script>
    <script src="~/login-form-19js/main.js"></script>

</body>
</html>

